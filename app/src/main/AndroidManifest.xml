<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tachyon.techlabs.iplauction">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".IntroActivity" />
        <activity
            android:name=".AfterRegistrationMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WaitingForPlayersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".qr_code_generator"
            android:screenOrientation="portrait" />
        <activity
            android:name=".qr_scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".qrcode_scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PowerCards"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_power_cards"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".About" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".opponents_data" />
        <activity
            android:name=".PaymentInfo"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".OngoingPlayer" />
        <activity android:name=".AdminOngoingPlayer">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".about_developers"
            android:label="@string/title_activity_about_developers"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".developers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyTeamActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".PranjalActivity" />
        <activity android:name=".AbhishekActivity" />
        <activity
            android:name=".OpponentsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Rules" />
        <activity android:name=".Reveal"></activity>
    </application>

</manifest>